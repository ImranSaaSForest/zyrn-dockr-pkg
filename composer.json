{
    "name": "zyrn/dockr-pkg",
    "description": "A Composer package to set up Docker containers with PHP 8.1, MySQL 8, and Nginx.",
    "require": {
        "zyrn/dockr-pkg": "^1.0"
    },
    "scripts": {
        "post-install-cmd": [
            "php vendor/zyrn/dockr-pkg/check_docker.php",
            "echo 'Starting Docker containers...'",
            "docker-compose -f vendor/zyrn/dockr-pkg/docker-compose.yml up -d"
        ],
        "post-update-cmd": [
            "php vendor/zyrn/dockr-pkg/check_docker.php",
            "echo 'Starting Docker containers...'",
            "docker-compose -f vendor/zyrn/dockr-pkg/docker-compose.yml up -d"
        ]
    }
}
